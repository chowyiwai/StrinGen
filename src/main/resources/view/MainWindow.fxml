<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="900" onCloseRequest="#handleExit" title="StrinGen" type="Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <scene>
      <Scene fx:id="scene">
         <stylesheets>
            <URL value="@../../../../../../../Year%202%20Semester%201/CS2103/addressbook/src/main/resources/view/Extensions.css" />
         </stylesheets>
         <root>
            <VBox fx:id="windowPlaceholder" styleClass="base" stylesheets="@theme.css">
               <children>
                  <ListView fx:id="entryWindowPlaceholder" VBox.vgrow="ALWAYS" />
                  <HBox fx:id="buttonPlaceholder" alignment="BOTTOM_RIGHT">
                     <children>
                        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="addCohortButton" mnemonicParsing="false" onAction="#addCohort" text="Add another cohort" />
                           </children>
                        </HBox>
                        <Button fx:id="generateStringButton" mnemonicParsing="false" onAction="#generateString" stylesheets="@theme.css" text="Generate string" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </root>
      </Scene>
   </scene>
</fx:root>
