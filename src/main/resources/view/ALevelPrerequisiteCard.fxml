<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<fx:root stylesheets="@theme.css" type="HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="subjectField" prefHeight="27.0" promptText="Enter subject code..." styleClass="enterBox" stylesheets="@theme.css" />
      <TextField fx:id="gradeField" prefHeight="27.0" promptText="Enter minimum grade..." styleClass="enterBox" stylesheets="@theme.css" />
      <Button mnemonicParsing="false" onAction="#addNewEntry" prefHeight="27.0" stylesheets="@theme.css" text="add OR" />
      <Button fx:id="deleteButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="27.0" prefWidth="27.0" stylesheets="@theme.css" text="-" />
   </children>
</fx:root>
