<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="resultWindow" fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" styleClass="base" stylesheets="@theme.css" type="ScrollPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <AnchorPane minHeight="0.0" minWidth="0.0" styleClass="base">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label stylesheets="@theme.css" text="GENERATED STRING" />
                  <Label fx:id="stringGenerated" maxWidth="600.0" style="-fx-border-color: white;" stylesheets="@theme.css" text="Label" wrapText="true" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
                  <HBox>
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#copyToClipboard" prefHeight="36.0" prefWidth="201.0" stylesheets="@theme.css" text="Copy to Clipboard" />
                        <Label fx:id="lengthWarningLabel" alignment="CENTER" text="Label" />
                     </children>
                  </HBox>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#generateAnotherString" prefHeight="36.0" prefWidth="201.0" stylesheets="@theme.css" text="Generate another string" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </content>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
